{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"postCreateCommand": "bash .devcontainer/post_create.sh",
	"portsAttributes": {
		"8501": {
		"label": "Application",
		"onAutoForward": "openPreview"
		}
	},
	"forwardPorts": [
		8501
		],
	"customizations": {
		"codespaces": {
			"openFiles": [
				"INSTRUCTIONS.adoc",
				"bot.py",
				".streamlit/.streamlit.toml.example"
				]
		},
		"vscode": {
			"settings": {
				"python.createEnvironment.trigger": "off"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.debugpy"
				]
		}
	}
}